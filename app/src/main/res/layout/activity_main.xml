<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_container"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <damon.ll.widgetlibs.progress.CircleProgressView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/circle_progress_in_xml"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:progress_background="@drawable/circle_progress_view_bg"
        app:progress_image_src="@drawable/circle_progress_view_progress"
        app:progress_total_time="30000"
        app:progress_total="3" />

</RelativeLayout>